# Database
# Neon connection string with sslmode=require (replace with your rotated secret)
DATABASE_URL=postgresql://neondb_owner:NEON_PASSWORD_REMOVED@ep-gentle-snow-a4p3pvoe-pooler.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# Supabase Configuration (only if using Supabase auth flow)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Application URL
NEXT_PUBLIC_APP_URL=http://app.local.test:3000

# Cookie Domain for Multi-App Support
# Use .local.test for development (app.local.test, cs.local.test)
# Use .yourdomain.com for production
COOKIE_DOMAIN=.local.test

# Environment
NODE_ENV=development

# Auth / Sessions
# Generate a strong random secret (e.g., `openssl rand -hex 32`)
SESSION_SECRET=replace-with-strong-secret

# OpenAI (AI sentiment, summaries, follow-ups)
OPENAI_API_KEY=OPENAI_KEY_REMOVED
# Optional model override
OPENAI_MODEL=gpt-4.1-mini

# n8n webhook guard (used by /api/webhooks/n8n and /api/ai/sentiment)
N8N_WEBHOOK_API_KEY=N8N_KEY_REMOVED
